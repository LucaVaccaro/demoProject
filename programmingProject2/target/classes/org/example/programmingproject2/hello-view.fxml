<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="570.0" prefWidth="711.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.programmingproject2.StudentController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="welcomeText" />
    <TextField fx:id="nameField" prefHeight="25.0" prefWidth="303.0" promptText="Name" />
    <TextField fx:id="idField" promptText="ID" />
    <TextField fx:id="gpaField" prefHeight="25.0" prefWidth="328.0" promptText="GPA" />
    <Button mnemonicParsing="false" onAction="#onAddStudentClick" text="Add Student" />
    <Button mnemonicParsing="false" onAction="#onSearchByIdClick" text="Search by ID" />
    <Button mnemonicParsing="false" onAction="#onLoadDataClick" text="Load Data" />
    <Button mnemonicParsing="false" onAction="#onSaveDataClick" text="Save Data" />
    <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="gpaColumn" prefWidth="75.0" text="GPA" />
        </columns>
    </TableView>
</VBox>
